<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.2" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">
  <persistence-unit name="ProyectoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>cr.ac.una.proyecto.model.Categoria</class>
    <class>cr.ac.una.proyecto.model.Respuesta</class>
    <class>cr.ac.una.proyecto.model.Pregunta</class>
    <class>cr.ac.una.proyecto.model.Partida</class>
    <class>cr.ac.una.proyecto.model.Jugador</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521/XEPDB1"/>
      <property name="jakarta.persistence.jdbc.user" value="preguntados"/>
      <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="jakarta.persistence.jdbc.password" value="preguntados"/>
    </properties>
  </persistence-unit>
</persistence>
